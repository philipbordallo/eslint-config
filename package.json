{
  "name": "eslint-configs",
  "version": "3.2.0",
  "private": true,
  "main": "build.js",
  "license": "MIT",
  "author": "Philip Bordallo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "babel-node ./scripts/build.js",
    "lint": "eslint src/",
    "prerelease": "npm run build",
    "release": "npm-run-all publish:*",
    "publish:default": "npm publish packages/eslint-config",
    "publish:typescript": "npm publish packages/eslint-config-typescript",
    "version": "npm run version:packages && git add .",
    "version:packages": "babel-node ./scripts/version.js",
    "clean": "rimraf ./packages/**/index.js"
  },
  "eslintConfig": {
    "extends": [
      "./packages/eslint-config/index.js"
    ],
    "rules": {
      "no-console": "off"
    }
  },
  "dependencies": {
    "eslint-restricted-globals": "^0.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "mustache": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
